    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         

        if (soortInvestering.getText().isEmpty() || bedragInvestering.getText().isEmpty()){
            
            JOptionPane.showMessageDialog(null, "Er missen een aantal gegevens!");
        }
        else{
          
            String soort = soortInvestering.getText().trim();
            String bedrag = bedragInvestering.getText().trim();
            
            Investering investering = new Investering(soort, Integer.parseInt(bedrag));
            
            investering.add(investering);
            
            
        }
    }                                        

